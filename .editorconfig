root = true

# Python files
[*.py]
# Indentation style: space
indent_style = space
# Indentation size: 4 spaces
indent_size = 4
# Newline character at end of file
insert_final_newline = true
# Trim trailing whitespace
trim_trailing_whitespace = true
# Set charset
charset = utf-8
# Line ending format
end_of_line = lf

# Python docstring and comments
max_line_length = 79